{
  "name": "weblet",
  "version": "0.1.0",
  "description": "Reference implementation for the Weblet specification",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "weblet": "dist/cli/index.js"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node",
    "test": "bun test",
    "test:parser": "bun test tests/parser",
    "test:node": "npm run test:parser:node && npm run test:storage:node && npm run test:deps:node && npm run test:cli:node && npm run test:runtime:node && npm run test:agent:node",
    "test:parser:node": "npx tsx tests/parser/test-runner.ts && npx tsx tests/parser/spec-examples.test.ts",
    "test:storage:node": "npx tsx tests/storage/storage.test.ts",
    "test:deps:node": "npx tsx tests/dependencies/dependencies.test.ts",
    "test:cli:node": "npx tsx tests/cli/cli.test.ts",
    "test:runtime:node": "npx tsx tests/runtime/runtime.test.ts",
    "test:agent:node": "npx tsx tests/agent-context/agent-context.test.ts",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src tests",
    "cli": "npx tsx src/cli/index.ts"
  },
  "dependencies": {
    "playwright": "^1.57.0",
    "puppeteer": "^24.35.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jeffrschneider/weblet.git"
  },
  "keywords": [
    "weblet",
    "web-app",
    "agent",
    "portable",
    "bun"
  ],
  "author": "Jeff Schneider",
  "license": "MIT"
}
